{
  "name": "energy-solutions-backend",
  "version": "1.0.0",
  "description": "Energy Solutions Backend API with Node.js, MongoDB, TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev:simple": "node --max-old-space-size=1024 -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
    "dev:build": "npm run build && node --max-old-space-size=1024 dist/server.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "render-start": "node --max-old-space-size=512 dist/server.js",
    "seed": "ts-node src/database/seeds/admin.seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "mongodb",
    "mvc",
    "clean-architecture"
  ],
  "author": "Energy Solutions",
  "license": "ISC",
  "dependencies": {
    "appwrite": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-appwrite": "^11.0.0",
    "nodemailer": "^6.9.7",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
