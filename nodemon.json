{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules/**/*", "dist/**/*"],
  "exec": "node --max-old-space-size=1024 -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "restartable": "rs",
  "verbose": false
}
